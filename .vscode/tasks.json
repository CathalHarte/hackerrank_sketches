{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: big facker",
            "type": "shell",
            "command": "mkdir -p build; cd build; cmake -DCMAKE_BUILD_TYPE=Debug ..; make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}